base = File.expand_path(File.dirname(__FILE__))

require 'mechanize'
require 'highline/import'
require 'json'
require 'platform_helpers'
require  base + '/constants'
require  base + '/ssh'
require base + '/login'

class PhasedLayerTunnelClient < CyberConnectAgent::Login
  VERSION = '0.1.0'
  def initialize(params={})
    @user = params[:user]
    @pass = params[:pass]
    @login_base_url = params[:login_base_url]
    @service_base_url = params[:service_base_url]
    @tunnel_type = params[:tunnel_type]
    if (Constants::TUNNEL_TYPES - ['shared_screen']).include?(@tunnel_type)
      @sport = params[:sport]
      @dport = params[:dport]
    elsif @tunnel_type == 'shared_screen'
      @session_title = params[:session_title]
    end
  end

  def private_cert
    res = {:status => false, :cert => nil}
    if sanity
      #p "#{@service_base_url}/poor_mans_vpn/cert/?conn_type=local&conn_port=10001"
      t = @@agent.get("#{@service_base_url}/poor_mans_vpn/cert/?conn_type=local&conn_port=10001").body
      res[:status] = t.scan(/<STATUS>(.*)<\/STATUS>/).pp == 'allow' ? true : false
      res[:cert] = t.scan(/<CERT>(.*)<\/CERT>/m).pp
    end
    res
  end

  def create_tunnel
    cert_res = private_cert
    if cert_res[:status]
      private_tmp = "#{Constants::TEMP}/#{Token.provide}_key"
      fd = File.open(private_tmp, 'w+')
      fd.puts cert_res[:cert]
      fd.close
      FileUtils.chmod 0600, private_tmp unless Constants::PLATFORM == 'dummies'

      if (Constants::TUNNEL_TYPES - ['shared_screen']).include?(@tunnel_type)
        ssh = SSH::Tunnel.new(:type => @tunnel_type, :host => '127.0.0.1', :sport => @sport, :dport => @dport,
                              :options=>{ :port => 2222, :passphrase=>"", :keys_only => true,
                              :keys=>[private_tmp]}, :user => @user)
      elsif @tunnel_type == 'shared_screen'
        ssh = SSH::Tunnel.new(:type => @tunnel_type, :host => '127.0.0.1',
                              :options=>{ :port => 2222, :passphrase=>"", :keys_only => true,
                              :keys=>[private_tmp]}, :user => @user, :session_title => @session_title)
      end
      ssh.start if Constants::TUNNEL_TYPES.include?(@tunnel_type)
    end
  end
end
